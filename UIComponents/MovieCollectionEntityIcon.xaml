<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MovieRepoApp.Models"
             x:Class="MovieRepoApp.UIComponents.MovieCollectionEntityIcon"
             x:Name="This">
    <Frame>
        <Image 
            x:Name="PosterIcon"
            HeightRequest="225"
            WidthRequest="150"
            Aspect="AspectFit"
            Margin="20"
            Source="{Binding PosterSource, Source={x:Reference This}}"/>
    </Frame>
</ContentView>
